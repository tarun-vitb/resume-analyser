# Environment Configuration for AI Resume Analyzer

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# OpenAI API (Optional - for enhanced NLP features)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (Optional - for user data persistence)
DATABASE_URL=sqlite:///./resume_analyzer.db

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHE=True

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,docx,doc

# Model Configuration
NLP_MODEL=all-MiniLM-L6-v2
PREDICTION_MODEL=xgboost
ENABLE_GPU=False

# External APIs (Optional)
COURSERA_API_KEY=your_coursera_api_key
UDEMY_API_KEY=your_udemy_api_key

# Monitoring and Analytics
ENABLE_ANALYTICS=False
SENTRY_DSN=your_sentry_dsn_here

# Deployment
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
